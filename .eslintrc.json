{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module",
        "ecmaVersion": 2015
    },
    "env": {
        "node": true,
        "jest": true,
        "es6": true,
        "browser": true
    },
    "plugins": ["import"],
    "ignorePatterns": ["node_modules/", "dist/"],
    "rules": {
        "no-unused-vars": [
            "error", {
                "ignoreRestSiblings": true
            }
        ]
    }
}
